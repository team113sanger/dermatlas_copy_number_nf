nextflow_process {

    name "Test Process FILTER_BROAD_GISTIC2_CALLS"
    script "modules/gistic2.nf"
    process "FILTER_BROAD_GISTIC2_CALLS"

    test("Should run without failures") {

        when {
        params {
            load("$baseDir/tests/testdata/test_params.json")
        }
            process {
                """
                input[0] = file("$baseDir/tests/testdata/ascat_segments.tsv")
                input[1] = file("$baseDir/tests/testdata/broad_significance_results.txt")
                input[2] = file("$baseDir/tests/testdata/broad_values_by_arm.txt")
                input[3] = file("$baseDir/tests/testdata/ucsc_chrom_arms.txt")
                input[4] = 0.1
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
