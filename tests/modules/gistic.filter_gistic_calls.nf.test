nextflow_process {

    name "Test Process FILTER_GISTIC_CALLS"
    script "modules/gistic.nf"
    process "FILTER_GISTIC_CALLS"

    test("Should run without failures") {

        when {
            params {
                difficult_regions_file = "/lustre/scratch124/jb63/ascat/resources/GRCh38_alldifficultregions.bed"
                cohort_prefix = "TBC"
            }
            process {
                """
                input[0] = file("$baseDir/tests/testdata/one_tumor_per_patient.tsv")
                input[1] = file("$baseDir/tests/testdata/all_lesions.conf_95.txt")
                input[2] = file("${params.difficult_regions_file}")
                input[3] = "${params.cohort_prefix}"
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
