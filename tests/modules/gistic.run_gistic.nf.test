nextflow_process {

    name "Test Process RUN_GISTIC"
    script "modules/gistic.nf"
    process "RUN_GISTIC"

    test("Should run without failures") {

        when {
            params {
                gistic_refgene_file = "/lustre/scratch124/jb63/ascat/hg38.UCSC.add_miR.160920.refgene.mat"
            }
            process {
                """
                input[0] = file("$baseDir/tests/testdata/one_tumor_per_patient.tsv")
                input[1] = file("${params.gistic_refgene_file}")
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
