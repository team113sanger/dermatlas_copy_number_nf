// Global default params, used in configs
includeConfig 'conf/base.config'
params {

    // Boilerplate options
    outdir                     = './results'
    tracedir                   = "${params.outdir}/pipeline_info"
    publish_dir_mode           = 'copy'
    
    // Max requirements
    max_memory                 = '128.GB'
    max_cpus                   = 16
    max_time                   = '240.h'
} 

profiles {
    secure_lustre {
        process.executor = 'local'
        
        params {
        one_per_patient = false
        independent = false
        reference_genome = "/lustre/scratch124/resources/dermatlas/GRCh38_full_analysis_set_plus_decoy_hla.fa"
        bait_set = "/lustre/scratch124/resources/dermatlas/GRCh38_WES5_canonical_pad100.merged.bed"
        resource_files = "/lustre/scratch124/resources/dermatlas/1000G_loci_hg38_chr"
        gc_file = "/lustre/scratch124/resources/dermatlas/1000G_GC_exome_chr.txt"
        rt_file = "/lustre/scratch124/resources/dermatlas/1000G_RT_exome_chr.txt"
        gistic_refgene_file = "/lustre/scratch124/resources/dermatlas/hg38.UCSC.add_miR.160920.refgene.mat"
        difficult_regions_file = "/lustre/scratch124/resources/dermatlas/GRCh38_alldifficultregions.bed"
        chrom_arms_file =  "tests/testdata/ucsc_chrom_arms.txt"
        gistic_broad_peak_q_cutoff = 0.1
        }

        docker {
        enabled = true
        runOptions = '-u $(id -u):$(id -g)'
        }
        process {
            withName: RUN_ASCAT_EXOMES {
            cpus = 8
            memory = 40.GB
        }}

        singularity {
            enabled    = false
            autoMounts = false
        }
    }

    farm22 {
        process.executor = 'lsf'
        singularity.runOptions = "--bind /lustre"

        docker {
        enabled = false
        }
        singularity {
            enabled    = true
            autoMounts = true
            cacheDir = '/lustre/scratch125/casm/team113da/singularity_cache/dermatlas'
            registry = 'gitlab-registry.internal.sanger.ac.uk'
            }
        executor {
            name = 'lsf'
            perJobMemLimit = true
            poolSize = 4
            submitRateLimit = '5 sec'
            killBatchSize = 50
        }
        process {
            withName: RUN_ASCAT_EXOMES {
            cpus = 18
            memory = 40.GB
            }
            }
        params {
            one_per_patient = false
            independent = false
            reference_genome = "/lustre/scratch124/casm/team113/ref/human/GRCh38/GRCh38_full_analysis_set_plus_decoy_hla.fa"
            bait_set = "/lustre/scratch125/casm/team113da/projects/DERMATLAS/metadata/references/baitset/DNA/GRCh38_WES5_canonical_pad100.merged.bed"
            resource_files = "/lustre/scratch124/casm/team113/secure-lustre/resources/dermatlas/1000G_loci_hg38_chr"
            gc_file = "/lustre/scratch124/casm/team113/secure-lustre/resources/dermatlas/1000G_GC_exome_chr.txt"
            rt_file = "/lustre/scratch124/casm/team113/secure-lustre/resources/dermatlas/1000G_RT_exome_chr.txt"
            gistic_refgene_file = "/lustre/scratch124/casm/team113/secure-lustre/resources/dermatlas/hg38.UCSC.add_miR.160920.refgene.mat"
            difficult_regions_file = "/lustre/scratch124/casm/team113/secure-lustre/resources/dermatlas/GRCh38_alldifficultregions.bed"
            chrom_arms_file =  "/lustre/scratch124/casm/team113/secure-lustre/resources/dermatlas/ucsc_chrom_arms.txt"
            gistic_broad_peak_q_cutoff = 0.1
            }
        }
}



def trace_timestamp = new java.util.Date().format( 'yyyy-MM-dd_HH-mm-ss')
tracedir = "pipeline_info"

report {
    enabled = true
    file    = "${params.tracedir}/execution_report_${trace_timestamp}.html"
}


manifest {
    name            = 'dermatlas_copy_number_nf'
    author          = 'Kim Wong, Jamie Billington'
    homePage        = 'https://gitlab.internal.sanger.ac.uk/DERMATLAS/analysis-methods/dermatlas_copy_number_nf'
    description     = 'Copy Number analysis pipeline for Dermatlas'
    mainScript      = 'main.nf'
    nextflowVersion = '!>=22.04.5'
    version         = '0.7.0'
    defaultBranch   = 'develop'
}

def check_max(obj, type) {
    if (type == 'memory') {
        try {
            if (obj.compareTo(params.max_memory as nextflow.util.MemoryUnit) == 1)
                return params.max_memory as nextflow.util.MemoryUnit
            else
                return obj
        } catch (all) {
            println "   ### ERROR ###   Max memory '${params.max_memory}' is not valid! Using default value: $obj"
            return obj
        }
    } else if (type == 'time') {
        try {
            if (obj.compareTo(params.max_time as nextflow.util.Duration) == 1)
                return params.max_time as nextflow.util.Duration
            else
                return obj
        } catch (all) {
            println "   ### ERROR ###   Max time '${params.max_time}' is not valid! Using default value: $obj"
            return obj
        }
    } else if (type == 'cpus') {
        try {
            return Math.min( obj, params.max_cpus as int )
        } catch (all) {
            println "   ### ERROR ###   Max cpus '${params.max_cpus}' is not valid! Using default value: $obj"
            return obj
        }
    }
}