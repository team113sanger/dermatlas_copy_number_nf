
profiles {

    secure_lustre {
        process.executor = 'local'
        
        params.reference_genome = "/lustre/scratch124/jb63/ascat/GRCh38_full_analysis_set_plus_decoy_hla.fa"
        params.bait_set = "/lustre/scratch124/jb63/ascat/GRCh38_WES5_canonical_pad100.merged.bed"
        params.resource_files = "/lustre/scratch124/jb63/ascat/resources/1000G_loci_hg38_chr"
        params.gc_file = "/lustre/scratch124/jb63/ascat/resources/1000G_GC_exome_chr.txt"
        params.rt_file = "/lustre/scratch124/jb63/ascat/resources/1000G_RT_exome_chr.txt"
        params.gistic_refgene_file = "/lustre/scratch124/jb63/ascat/hg38.UCSC.add_miR.160920.refgene.mat"
        params.difficult_regions_file = "/lustre/scratch124/jb63/ascat/resources/GRCh38_alldifficultregions.bed"

        docker {
        enabled = true
        runOptions = '-u $(id -u):$(id -g) -v /workspaces/ascat:/workspaces/ascat'
        }

        singularity {
            enabled = false
            autoMounts = true
        }
    }

    cluster {
        process.executor = 'lsf'
        docker.enabled = false
        singularity.enabled = true
        process.clusterOptions = "-G cellularoperations -R'select[mem>8000]' -R'rusage[mem=8000]' -M 8000"
        singularity.runOptions = "--bind /lustre"
    }

    // def trace_timestamp = new java.util.Date().format( 'yyyy-MM-dd_HH-mm-ss')
    // tracedir = "${params.project}/results/pipeline_info"
    
    // report {
    //     enabled = true
    //     file    = "${params.project}/results/execution_report_${trace_timestamp}.html"
    // }

}

process {
    withLabel: big_mem {
        cpus = 8
        memory = 60.GB
        queue = 'long'
    }
}


manifest {
    name            = 'dermatlas_cna'
    author          = 'Kim Wong, Jamie Billington'
    homePage        = 'https://gitlab.internal.sanger.ac.uk/DERMATLAS/analysis-methods/ascat'
    description     = 'Copy Number analysis pipeline for Dermatlas'
    mainScript      = 'main.nf'
    nextflowVersion = '!>=21.10.6'
    version         = '1.0.0'
    defaultBranch   = 'nextflow_wrapper'
}
