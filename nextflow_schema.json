        "OUTDIR": {
            "type": "string"
        },
        "cohort_prefix": {
            "type": "string"
        },
        "bam_files": {
            "type": "string", 
            "format": "file-path"
        },
        "tumor_normal_pairs": {
            "type": "string"
        },
        "metadata_manifest": {
            "type": "string"
        },
        "reference_genome": {
            "type": "string",
            "format": "file-path"
        }, 
        "bait_set": {
            "type": "string",
            "format": "file-path"
        },
        "resource_files": {
            "type": "string",
            "format": "file-path"
        },
        "gc_file": {
            "type": "string",
            "format": "file-path"
        },
        "rt_file": {
            "type": "string",
            "format": "file-path"
        },
        "gistic_refgene_file": {
            "type": "string",
            "format": "file-path"
        },
        "difficult_regions_file": {
            "type": "string",
            "format": "file-path"
        }
    }}

}}